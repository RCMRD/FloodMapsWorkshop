<h2>Register Your Application</h2>

<form role='form' class="form-horizontal" action='/apps' method='POST' id='app_edit_form'>
  <fieldset>

	<div class='form-group'>
		<label for="app_id" class="col-sm-2 control-label">Application ID</label>
	    <div class="col-sm-10">
		<input class='form-control' id='app_id' name='app_id' />
		</div>
	</div>
	
	<div class='form-group'>
		<label for="app-secret" class="col-sm-2 control-label">Application Access Token</label>
	    <div class="col-sm-10">
		<input class='form-control' id='app_secret' name='app_secret' />
		</div>
	</div>
	
	<button type="submit" class="btn btn-default">Submit</button>
  
  </fieldset>
  
</form>
