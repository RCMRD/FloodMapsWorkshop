<h2>Profile</h2>
<img src='<%= u.gravatar %>' /> &nbsp; <%= u.email %>
<hr/>
<div class='container'>

<form role='form' class="form-horizontal" action='/users/<%=u.id%>' method='POST' id='user_edit_form'>
<fieldset>

	<input type='hidden' class='form-control' id='user_id' name='id' value='<%= u.id %>'/>
	<input type='hidden' class='form-control' id='gravatar' name='gravatar' value='<%= u.gravatar %>'/>

	<div class='form-group'>
		<label for="id" class="col-sm-2 control-label">Name</label>
	    <div class="col-sm-10">
		<input class='form-control' id='name' name='name' value='<%= u.name %>'/>
		</div>
	</div>

	<div class='form-group'>
		<label for="id" class="col-sm-2 control-label">Organization</label>
	    <div class="col-sm-10">
		<input class='form-control' id='organization' name='organization' value='<%= u.organization %>'/>
		</div>
	</div>  

	<% if( user && user.is_admin ) { %> 
		<div class='form-group'>
			<label for="Admin?" class="col-sm-2 control-label">Is Admin?</label>
		    <div class="col-sm-10">
			<% if(u.is_admin == true){ %> 
				<input type='checkbox' class='form-control' id='is_admin' name='is_admin' checked/>
			<% } else { %>
				<input type='checkbox' class='form-control' id='is_admin' name='is_admin'/>
			<% } %>
			</div>
		</div>
	
		<div class='form-group'>
			<label for="Banned?" class="col-sm-2 control-label">Is Banned?</label>
		    <div class="col-sm-10">
			<% if(u.is_banned == true){ %> 
				<input type='checkbox' class='form-control' id='is_banned' name='is_banned' checked/>
			<% } else { %>
				<input type='checkbox' class='form-control' id='is_banned' name='is_banned' />
			<% } %>			
			</div>
		</div>
		
	<% } %>
	
  <button type="submit" class="btn btn-default">Submit</button>
  </fieldset>
</form>

</div>